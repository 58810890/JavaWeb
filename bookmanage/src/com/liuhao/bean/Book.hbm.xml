<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.liuhao.bean.Book" table="books">
		<id name="bookid" type="java.lang.Integer" column="bookid">
			<generator class="increment"></generator>
		</id>

		<property name="bookname" type="string" column="bookname" />
		<property name="author" type="string" column="author" />
		<property name="price" type="double" column="price" />
		<property name="presstime" type="date" column="presstime" />
	</class>
</hibernate-mapping>